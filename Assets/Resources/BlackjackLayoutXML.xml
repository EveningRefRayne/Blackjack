<xml>
	<!-- This file holds info for laying out the Bartok card game. -->
	
	<!-- The multiplier is multiplied by the x and y attributes below. -->
	<!-- This determines how loose or tight the layout is. --> 
	<multiplier x="1" y="1" />

	<!-- This positions the draw pile and staggers it -->
	<slot type="drawpile" x="1.5" y="8" layer="1"/>
	
	<!-- This positions the discard pile and target card -->
	<slot type="discardpile" x="-1.5" y="8" layer="2"/>

	<!-- slots for hand cards of the players -->
	<slot type="hand" x="0" y="-10" rot="0" player="1" layer="3"/>
	<slot type="hand" x="-10" y="-3" rot="270" player="2" layer="3"/>
	<slot type="hand" x="0" y="5" rot="180" player="3" layer="3"/>
	<slot type="hand" x="10" y="-3" rot="90" player="4" layer="3"/>

	<!-- slots for hands when shown-->
	<slot type="show" x="0" y="-8" rot="0" player="1" layer="4"/>
	<slot type="show" x="-8" y="-3" rot="270" player="2" layer="4"/>
	<slot type="show" x="0" y="3" rot="180" player="3" layer="4"/>
	<slot type="show" x="8" y="-3" rot="90" player="4" layer="4"/>

</xml>
	